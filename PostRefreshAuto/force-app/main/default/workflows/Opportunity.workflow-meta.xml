    <rules>
        <fullName>Opportunity Creation and Update Publish to CRS</fullName>
        <actions>
            <name>Update_Send_To_CRS</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Opportunity_Outbound_Message</name>
            <type>OutboundMessage</type>
        </actions>
        <active>false</active>
        <description>Workflow to publish the Opportunity created/updated With Stage Is 3. Solutioning and beyond Or the record is updated by Integration User.</description>
        <formula>AND ( 	OR 	( 		ISPICKVAL( StageName , &apos;3. Solutioning&apos;), 		ISPICKVAL( StageName , &apos;4. End-Game&apos;), 		ISPICKVAL( StageName , &apos;5. Negotiation&apos;) 	), 	NOT(Opportunity_Record_Type_Developer_Name__c = &apos;Multi_BU_Multi_Geo&apos;), 	NOT(Opportunity_Record_Type_Developer_Name__c = &apos;Framework_Deal&apos;), 	Vertical_TCV__c &gt; 0 )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
    
    <rules>
        <fullName>Opportunity Stage changes to Closed</fullName>
        <actions>
            <name>Opportunity_Outbound_Message</name>
            <type>OutboundMessage</type>
        </actions>
        <active>false</active>
        <description>Outbound Message Triggered When Opportunity Stage changes to any of the closed stage and is having a PSFT Opportunity Id &amp; Last Modified User Is Not an Integration User.</description>
        <formula>AND ( 	Send_to_CRS__c = True, 	OR 	( 		ISPICKVAL(StageName , &apos;Lost&apos;), 		ISPICKVAL(StageName , &apos;Client Withdraw&apos;), 		ISPICKVAL(StageName , &apos;Cognizant Withdraw&apos;), 		ISPICKVAL(StageName , &apos;Won&apos;), 		AND 		( 			ISPICKVAL(StageName , &apos;Duplicate&apos;), 			Is_Qualified__c = True 		) 	), 	$Profile.Name &lt;&gt; &apos;Integration User&apos;, 	NOT(Opportunity_Record_Type_Developer_Name__c = &apos;Multi_BU_Multi_Geo&apos;), 	NOT(Opportunity_Record_Type_Developer_Name__c = &apos;Closed_Framework_Deal_Opportunity&apos;), 	Vertical_TCV__c &gt; 0 )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
   
